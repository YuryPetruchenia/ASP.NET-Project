
@{
    ViewBag.Title = "AddTrack";
}

<h2>AddTrack</h2>

<div class="row">
    <div class="col-md-8">
        <section id="AddTrackForm">
            @using (Html.BeginForm("AddTrack", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="form-group">
                    @Html.Label("Track Title", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBox("SongTitle", "", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Choose Genre", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("Genre", ViewBag.Genres as SelectList, " Plaese select item ", new { @class = "ddl" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Choose Autor", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("SongWriter", ViewBag.SongWriters as SelectList, " Plaese select item ", new { @class = "ddl" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Choose Album", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("Album", ViewBag.Albums as SelectList, " Plaese select item ", new { @class = "ddl" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Add" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@Html.ActionLink("Back to toolth page", "StartAdmin", "Admin")

@Styles.Render("~/Content/Admin/AdminViewsStyle.css")